server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # Static files (if present in /usr/share/nginx/html)
	location / {
        try_files $uri $uri/ /index.html;
    }

    # Backend API
    location /api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://backend:8080;
    }

    # TradingView datafeed
    location /datafeed/ {
        # Proxy trực tiếp tới VNDIRECT dchart để có dữ liệu thật
        resolver 1.1.1.1 8.8.8.8 valid=300s;
        proxy_ssl_server_name on;
        proxy_set_header Host dchart-api.vndirect.com.vn;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass https://dchart-api.vndirect.com.vn/dchart/;
    }

    # TradingView storage
    location /storage/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://storage:3003;
    }
}
